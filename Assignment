public class Assignment {
	private Teacher absentee;
	private String[] schedule;
	private String[] substitutes;
	private String output;
	
	public Assignment(Teacher teacherIn, String[] scheduleIn) {
		setAbsentee(teacherIn);
		setSchedule(scheduleIn);
	}
	public void setAbsentee(Teacher absentee) {
		this.absentee = absentee;
	}
	public String[] getSchedule() {
		return schedule;
	}
	public void setSchedule(String[] schedule) {
		this.schedule = schedule;
	}
	public void setSubstitutes(String[] subs) {
		substitutes = subs;
	}
	public String toString() {
		output = absentee.getName() + "\nPeriod 1: " + substitutes[0] + " in room: " + schedule[0]
				+ "\nPeriod 2: " + substitutes[1] + " in room: " + schedule[1]
				+ "\nPeriod 3: " + substitutes[2] + " in room: " + schedule[2]
				+ "\nPeriod 4: " + substitutes[3] + " in room: " + schedule[3]
				+ "\nPeriod 5: " + substitutes[4] + " in room: " + schedule[4];
		return output;
	}
}
